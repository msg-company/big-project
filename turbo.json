{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "generate:env": {
      "cache": false,
      "outputs": ["apps/**/.env"]
    },
    "generate:utils": {
      "cache": false,
      "outputs": ["packages/env-config/src/utils/**"]
    },
    "generate": {
      "cache": false,
      "outputs": [
        "apps/**/.env",
        "packages/env-config/src/utils/**",
        "packages/env-config/dist/**"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "src/**/*.css", "package.json"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["generate"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "fuzz": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "fuzz:ci": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    }
  }
}
